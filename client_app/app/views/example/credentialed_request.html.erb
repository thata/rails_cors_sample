<script type="text/javascript">
    //<![CDATA[
    var xhr = new XMLHttpRequest();
    var url = 'http://localhost:3000/resources/access_control_with_credential';

    function callOtherDomain() {
      xhr.open('GET', url, true);
      xhr.withCredentials = "true";
      xhr.onreadystatechange = handler;
      xhr.send();
    }

    function handler(evtXHR)
    {
        if (xhr.readyState == 4)
        {
                if (xhr.status == 200)
                {
                    var response = xhr.responseText;
                    invocationHistoryText = document.createTextNode(response);
                    var textDiv = document.getElementById("textDiv");
                    textDiv.appendChild(invocationHistoryText);
                }
                else
                    alert("Invocation Errors Occured" + xhr.readyState);
        }
        else
        {
            console.log("currently the application is at" + xhr.readyState);
        }
    }
    //]]>
</script>

<form id="controlsToInvoke" action="">
    <p>
    <input type="button" value="Click to Invoke Another Site" onclick="callOtherDomain()" />
    </p>
</form>

<div id="textDiv" />
